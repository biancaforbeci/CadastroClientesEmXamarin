<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppClientes.Views.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    prism:ViewModelLocator.AutowireViewModel="True">

    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Spacing="50">

            <Image Source="{Binding Imagem}" VerticalOptions="Start" />

            <Label
                Font="70"
                FontFamily="Broadway"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                Text="{Binding Title}"
                TextColor="DarkBlue" />

            <Button
                BackgroundColor="Gray"
                Command="{Binding Cadastrar}"
                Font="50"
                HorizontalOptions="FillAndExpand"
                Text="{Binding Cadastro}"
                TextColor="DarkBlue"
                VerticalOptions="Start" />


            <Button
                BackgroundColor="Gray"
                Command="{Binding Listar}"
                Font="50"
                HorizontalOptions="FillAndExpand"
                Text="{Binding Listagem}"
                TextColor="DarkBlue"
                VerticalOptions="Start" />


            <Button
                BackgroundColor="Gray"
                Command="{Binding Procurar}"
                Font="50"
                HorizontalOptions="FillAndExpand"
                Text="{Binding Procura}"
                TextColor="DarkBlue"
                VerticalOptions="Start" />


            <Button
                BackgroundColor="Gray"
                Command="{Binding Exclusao}"
                Font="50"
                HorizontalOptions="FillAndExpand"
                Text="{Binding Excluir}"
                TextColor="DarkBlue"
                VerticalOptions="Start" />


        </StackLayout>
    </ContentPage.Content>

</ContentPage>